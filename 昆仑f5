    <script>
        // DOM 加载完成后执行
        document.addEventListener('DOMContentLoaded', function() {
            // 用户状态管理
            let currentUser = null;
            let isAdmin = false;
            let inviteCodes = ['KUNLUN2024', 'F5PHOTO', 'PHOTOMASTER'];
            
            // 深色模式切换
            const themeToggleBtn = document.getElementById('themeToggleBtn');
            const htmlElement = document.documentElement;
            
            // 检查本地存储中的主题偏好
            if (localStorage.getItem('theme') === 'dark' || 
                (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                htmlElement.classList.add('dark');
            } else {
                htmlElement.classList.remove('dark');
            }
            
            themeToggleBtn.addEventListener('click', function() {
                htmlElement.classList.toggle('dark');
                
                // 保存主题偏好到本地存储
                if (htmlElement.classList.contains('dark')) {
                    localStorage.setItem('theme', 'dark');
                } else {
                    localStorage.setItem('theme', 'light');
                }
            });
            
            // 用户菜单切换
            const userMenuBtn = document.getElementById('userMenuBtn');
            const userMenu = document.getElementById('userMenu');
            
            userMenuBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                userMenu.classList.toggle('hidden');
            });
            
            // 点击其他区域关闭用户菜单
            document.addEventListener('click', function(e) {
                if (!userMenuBtn.contains(e.target) && !userMenu.contains(e.target)) {
                    userMenu.classList.add('hidden');
                }
            });
            
            // 作品筛选功能
            const filterBtns = document.querySelectorAll('.filter-btn');
            const workItems = document.querySelectorAll('.work-item');
            
            filterBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    // 移除所有按钮的活动状态
                    filterBtns.forEach(item => {
                        item.classList.remove('active', 'bg-gray-100', 'dark:bg-gray-700', 'text-gray-800', 'dark:text-gray-200');
                        item.classList.add('text-gray-600', 'dark:text-gray-400');
                    });
                    
                    // 添加当前按钮的活动状态
                    this.classList.add('active', 'bg-gray-100', 'dark:bg-gray-700', 'text-gray-800', 'dark:text-gray-200');
                    this.classList.remove('text-gray-600', 'dark:text-gray-400');
                    
                    const filter = this.getAttribute('data-filter');
                    
                    // 筛选作品
                    workItems.forEach(item => {
                        if (filter === 'all' || item.classList.contains(filter)) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                });
            });
            
            // 精选作品滑块
            const prevFeaturedBtn = document.getElementById('prevFeaturedBtn');
            const nextFeaturedBtn = document.getElementById('nextFeaturedBtn');
            const featuredSlider = document.getElementById('featuredSlider');
            
            prevFeaturedBtn.addEventListener('click', function() {
                featuredSlider.scrollBy({ left: -400, behavior: 'smooth' });
            });
            
            nextFeaturedBtn.addEventListener('click', function() {
                featuredSlider.scrollBy({ left: 400, behavior: 'smooth' });
            });
            
            // 加载更多按钮
            const loadMoreBtn = document.getElementById('loadMoreBtn');
            
            loadMoreBtn.addEventListener('click', function() {
                // 模拟加载更多内容
                this.innerHTML = '<i class="fa fa-spinner fa-spin mr-2"></i>加载中...';
                
                setTimeout(() => {
                    this.innerHTML = '加载更多';
                    alert('已加载全部内容');
                }, 1500);
            });
            
            // 模态框相关
            const authModal = document.getElementById('authModal');
            const authModalTitle = document.getElementById('authModalTitle');
            const closeAuthModal = document.getElementById('closeAuthModal');
            const loginForm = document.getElementById('loginForm');
            const registerForm = document.getElementById('registerForm');
            const toggleAuthForm = document.getElementById('toggleAuthForm');
            const toggleAuthText = document.getElementById('toggleAuthText');

            const adminLoginModal = document.getElementById('adminLoginModal');
            const closeAdminLoginModal = document.getElementById('closeAdminLoginModal');
            const adminPanelModal = document.getElementById('adminPanelModal');
            const closeAdminPanelModal = document.getElementById('closeAdminPanelModal');

            const uploadModal = document.getElementById('uploadModal');
            const closeUploadModal = document.getElementById('closeUploadModal');
            
            // 登录按钮
            const loginBtn = document.getElementById('loginBtn');
            const registerBtn = document.getElementById('registerBtn');
            const adminLoginBtn = document.getElementById('adminLoginBtn');
            const userProfileBtn = document.getElementById('userProfileBtn');
            const uploadBtn = document.getElementById('uploadBtn');
            const logoutBtn = document.getElementById('logoutBtn');
            
            loginBtn.addEventListener('click', function(e) {
                e.preventDefault();
                authModalTitle.textContent = '登录';
                loginForm.classList.remove('hidden');
                registerForm.classList.add('hidden');
                toggleAuthText.innerHTML = '还没有账号？ <a href="#" id="toggleAuthForm" class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">立即注册</a>';
                authModal.classList.remove('hidden');
            });
            
            registerBtn.addEventListener('click', function(e) {
                e.preventDefault();
                authModalTitle.textContent = '注册';
                registerForm.classList.remove('hidden');
                loginForm.classList.add('hidden');
                toggleAuthText.innerHTML = '已有账号？ <a href="#" id="toggleAuthForm" class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">立即登录</a>';
                authModal.classList.remove('hidden');
            });
            
            // 切换登录/注册表单
            document.addEventListener('click', function(e) {
                if (e.target && e.target.id === 'toggleAuthForm') {
                    e.preventDefault();
                    if (loginForm.classList.contains('hidden')) {
                        authModalTitle.textContent = '登录';
                        loginForm.classList.remove('hidden');
                        registerForm.classList.add('hidden');
                        toggleAuthText.innerHTML = '还没有账号？ <a href="#" id="toggleAuthForm" class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">立即注册</a>';
                    } else {
                        authModalTitle.textContent = '注册';
                        registerForm.classList.remove('hidden');
                        loginForm.classList.add('hidden');
                        toggleAuthText.innerHTML = '已有账号？ <a href="#" id="toggleAuthForm" class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">立即登录</a>';
                    }
                }
            });
            
            // 管理员登录
            adminLoginBtn.addEventListener('click', function(e) {
                e.preventDefault();
                adminLoginModal.classList.remove('hidden');
            });
            
            // 获取邀请码按钮
            const getInviteBtn = document.getElementById('getInviteBtn');
            
            getInviteBtn.addEventListener('click', function() {
                alert('请联系管理员获取邀请码。');
            });
            
            // 登录提交按钮
            const submitLogin = document.getElementById('submitLogin');
            
            submitLogin.addEventListener('click', function() {
                const username = document.getElementById('loginUsername').value;
                const password = document.getElementById('loginPassword').value;
                
                if (!username || !password) {
                    alert('请填写所有字段');
                    return;
                }
                
                // 模拟登录（演示用）
                currentUser = { username: username, email: username + '@example.com' };
                authModal.classList.add('hidden');
                updateUserMenu();
                alert('登录成功，欢迎回来！');
            });
            
            // 注册提交按钮
            const submitRegister = document.getElementById('submitRegister');
            
            submitRegister.addEventListener('click', function() {
                const username = document.getElementById('registerUsername').value;
                const email = document.getElementById('registerEmail').value;
                const password = document.getElementById('registerPassword').value;
                const inviteCode = document.getElementById('registerInviteCode').value;
                
                if (!username || !email || !password || !inviteCode) {
                    alert('请填写所有字段');
                    return;
                }
                
                // 验证邀请码
                if (!inviteCodes.includes(inviteCode)) {
                    alert('无效的邀请码，请联系管理员获取。');
                    return;
                }
                
                // 模拟注册
                currentUser = { username: username, email: email };
                authModal.classList.add('hidden');
                updateUserMenu();
                alert('注册成功，欢迎加入昆仑F5！');
            });
            
            // 管理员登录提交
            const submitAdminLogin = document.getElementById('submitAdminLogin');
            
            submitAdminLogin.addEventListener('click', function() {
                const adminUsername = document.getElementById('adminUsername').value;
                const adminPassword = document.getElementById('adminPassword').value;
                
                // 演示用管理员账号密码
                if (adminUsername === 'admin' && adminPassword === 'admin123') {
                    isAdmin = true;
                    adminLoginModal.classList.add('hidden');
                    adminPanelModal.classList.remove('hidden');
                } else {
                    alert('管理员账号或密码错误！');
                }
            });
            
            // 上传作品
            uploadBtn.addEventListener('click', function(e) {
                e.preventDefault();
                uploadModal.classList.remove('hidden');
            });
            
            const submitUpload = document.getElementById('submitUpload');
            
            submitUpload.addEventListener('click', function() {
                const title = document.getElementById('uploadTitle').value;
                const category = document.getElementById('uploadCategory').value;
                const description = document.getElementById('uploadDescription').value;
                const file = document.getElementById('uploadFile').files[0];
                
                if (!title || !category || !description || !file) {
                    alert('请填写所有字段并选择文件');
                    return;
                }
                
                // 模拟上传
                uploadModal.classList.add('hidden');
                alert('作品上传成功！');
            });
            
            // 退出登录
            logoutBtn.addEventListener('click', function(e) {
                e.preventDefault();
                currentUser = null;
                isAdmin = false;
                updateUserMenu();
                alert('已退出登录');
            });
            
            // 关闭模态框
            closeAuthModal.addEventListener('click', function() {
                authModal.classList.add('hidden');
            });
            
            authModal.addEventListener('click', function(e) {
                if (e.target === authModal) {
                    authModal.classList.add('hidden');
                }
            });
            
            closeAdminLoginModal.addEventListener('click', function() {
                adminLoginModal.classList.add('hidden');
            });
            
            adminLoginModal.addEventListener('click', function(e) {
                if (e.target === adminLoginModal) {
                    adminLoginModal.classList.add('hidden');
                }
            });
            
            closeAdminPanelModal.addEventListener('click', function() {
                adminPanelModal.classList.add('hidden');
            });
            
            adminPanelModal.addEventListener('click', function(e) {
                if (e.target === adminPanelModal) {
                    adminPanelModal.classList.add('hidden');
                }
            });
            
            closeUploadModal.addEventListener('click', function() {
                uploadModal.classList.add('hidden');
            });
            
            uploadModal.addEventListener('click', function(e) {
                if (e.target === uploadModal) {
                    uploadModal.classList.add('hidden');
                }
            });
            
            // 搜索模态框
            const searchBtn = document.getElementById('searchBtn');
            const searchModal = document.getElementById('searchModal');
            const searchModalCloseBtn = document.getElementById('searchModalCloseBtn');
            
            searchBtn.addEventListener('click', function() {
                searchModal.classList.remove('hidden');
                setTimeout(() => {
                    searchModal.querySelector('input').focus();
                }, 100);
            });
            
            searchModalCloseBtn.addEventListener('click', function() {
                searchModal.classList.add('hidden');
            });
            
            searchModal.addEventListener('click', function(e) {
                if (e.target === searchModal) {
                    searchModal.classList.add('hidden');
                }
            });
            
            // 视频播放模态框
            const videoModal = document.getElementById('videoModal');
            const videoModalCloseBtn = document.getElementById('videoModalCloseBtn');
            const videoPlayer = document.getElementById('videoPlayer');
            const videoTitle = document.getElementById('videoTitle');
            const videoPlayButtons = document.querySelectorAll('.work-item.videos .fa-play');
            
            videoPlayButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const parentItem = this.closest('.work-item');
                    const title = parentItem.querySelector('h3').textContent;
                    const description = parentItem.querySelector('p').textContent;
                    
                    videoTitle.textContent = title;
                    // 这里应该设置实际的视频源
                    // videoPlayer.src = 'path/to/video.mp4';
                    // 由于没有实际视频，我们使用一个占位符
                    videoPlayer.src = '';
                    
                    videoModal.classList.remove('hidden');
                    // videoPlayer.play();
                });
            });
            
            videoModalCloseBtn.addEventListener('click', function() {
                videoModal.classList.add('hidden');
                videoPlayer.pause();
                videoPlayer.src = '';
            });
            
            videoModal.addEventListener('click', function(e) {
                if (e.target === videoModal) {
                    videoModal.classList.add('hidden');
                    videoPlayer.pause();
                    videoPlayer.src = '';
                }
            });
            
            // 探索按钮
            const exploreBtn = document.getElementById('exploreBtn');
            
            exploreBtn.addEventListener('click', function() {
                document.getElementById('discover').scrollIntoView({ behavior: 'smooth' });
            });
            
            // 了解更多按钮
            const learnMoreBtn = document.getElementById('learnMoreBtn');
            
            learnMoreBtn.addEventListener('click', function() {
                document.getElementById('categories').scrollIntoView({ behavior: 'smooth' });
            });
            
            // 导航链接平滑滚动
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        targetElement.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });
            
            // 初始化时检查URL哈希值
            if (window.location.hash) {
                const targetElement = document.querySelector(window.location.hash);
                if (targetElement) {
                    setTimeout(() => {
                        targetElement.scrollIntoView({ behavior: 'smooth' });
                    }, 100);
                }
            }
            
            // 管理员生成邀请码功能
            const generateInviteCodes = document.getElementById('generateInviteCodes');
            const inviteCodesList = document.getElementById('inviteCodesList');
            const inviteCodesListItems = document.getElementById('inviteCodesListItems');
            const copyAllInviteCodes = document.getElementById('copyAllInviteCodes');
            
            generateInviteCodes.addEventListener('click', function() {
                const count = parseInt(document.getElementById('inviteCodeCount').value);
                const newCodes = [];
                
                for (let i = 0; i < count; i++) {
                    const code = 'KUNLUN' + Math.random().toString(36).substr(2, 9).toUpperCase();
                    newCodes.push(code);
                    inviteCodes.push(code);
                }
                
                // 显示生成的邀请码
                inviteCodesListItems.innerHTML = '';
                newCodes.forEach(code => {
                    const li = document.createElement('li');
                    li.textContent = code;
                    inviteCodesListItems.appendChild(li);
                });
                
                inviteCodesList.classList.remove('hidden');
            });
            
            copyAllInviteCodes.addEventListener('click', function() {
                const codes = inviteCodesListItems.textContent;
                navigator.clipboard.writeText(codes).then(() => {
                    alert('所有邀请码已复制到剪贴板！');
                });
            });
            
            // 更新用户菜单
            function updateUserMenu() {
                const userMenuBtn = document.getElementById('userMenuBtn');
                const userMenuText = userMenuBtn.querySelector('span');
                
                if (currentUser) {
                    userMenuText.textContent = currentUser.username;
                    loginBtn.classList.add('hidden');
                    registerBtn.classList.add('hidden');
                    adminLoginBtn.classList.add('hidden');
                    userProfileBtn.classList.remove('hidden');
                    uploadBtn.classList.remove('hidden');
                    logoutBtn.classList.remove('hidden');
                } else {
                    userMenuText.textContent = '登录';
                    loginBtn.classList.remove('hidden');
                    registerBtn.classList.remove('hidden');
                    adminLoginBtn.classList.remove('hidden');
                    userProfileBtn.classList.add('hidden');
                    uploadBtn.classList.add('hidden');
                    logoutBtn.classList.add('hidden');
                }
            }
        });
    </script>
</body>
</html>
